<div class="pagetitle">
  <h1>Profile</h1>
  <nav>
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><%= link_to "Home", users_path %></li>
      <li class="breadcrumb-item">Users</li>
      <li class="breadcrumb-item active">Profile</li>
    </ol>
  </nav>
</div>

<section class="section profile">
  <div class="row">
    <div class="col-xl-4">
      <div class="card">
        <div class="card-body profile-card pt-4 d-flex flex-column align-items-center">
          <%= image_tag @current_user.profile_img, :class=>"rounded-circle" %>
          <h2><%= @current_user.username %></h2>
          <h3><%= @current_user.first_name %></h3>
        </div>
      </div>
    </div>
    <div class="col-xl-8">
      <div class="card">
        <div class="card-body pt-3">
          <ul class="nav nav-tabs nav-tabs-bordered">
            <li class="nav-item">
              <%= link_to "Overview", user_path(@current_user.id), :remote => true, :class=> 'nav-link active' %>
            </li>
            <li class="nav-item">
              <%= link_to "Edit Profile", edit_user_path(@current_user), :remote => true, :class=> 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to "Change Password", edit_user_path(@current_user, {:type=>'password'}), :remote => true, :class=> 'nav-link' %>
            </li>
          </ul>
          <div class="tab-content pt-2" id ="tab-content">
            <div class="tab-pane fade show active profile-overview" id="profile-overview">
              <%= render :partial => 'show' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
